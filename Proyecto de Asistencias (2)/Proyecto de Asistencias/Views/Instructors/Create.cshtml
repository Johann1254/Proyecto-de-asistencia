@model Libreria_de_conexion.Instructor

@{
    ViewBag.Title = "Create";
}

<link href="~/Content/Botones_y_textos.css" rel="stylesheet" />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>INSTRUCTOR</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
          <a class="nombre">Identificacion instructor</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.idInstructor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idInstructor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Nombres</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre_Instructor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Instructor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Apellidos</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Apellido_Instructor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellido_Instructor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Email</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email_Instructor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email_Instructor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Contraseña</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contraseña_Instructor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contraseña_Instructor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Qr asistencias</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Imagen_Qr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Imagen_Qr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Ficha</a>
            <div class="col-md-10">
                @Html.DropDownList("Numero_Ficha", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Numero_Ficha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Identificacion admin</a>
            <div class="col-md-10">
                @Html.DropDownList("idAdministrador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idAdministrador, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
         <div class="form-group button-container">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn-guardar" />
                <input type="button" class="input-volver" value="Volver" onclick="location.href='@Url.Action("Index")'" />
            </div>
        </div>
    </div>
}


