@{ Layout = null;
    var nombreUsuario = Session["NombreUsuario"] as string ?? "Nombre";
    var apellidoUsuario = Session["ApellidoUsuario"] as string ?? "Apellido";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consultarasistencias</title>
    @*<link href="~/CSS/EstiloConsultarA.css" rel="stylesheet" />
        <link href="~/CSS/cssIndex.css" rel="stylesheet" />*@
    <link href="~/CSS/VistaAprendiz.css" rel="stylesheet" />

</head>
<body>
    <header>
    </header>
    <section>
        <div class="container">
            <div class="header">
                <h1>Apendiz @nombreUsuario @apellidoUsuario</h1>
                <h4>Consultar Asistencias</h4>
            </div>
            <div class="cuadrado">
                <table>
                    <tr>
                        @**<th>Id de Asistencia</th>*@
                        <th>Fecha de Asistencia</th>
                        <th>Hora de Asistencia</th>
                        <th>Tipo de Asistencia</th>
                        <th>Nombre de Aprendiz</th>
                        <th>Apellidos de Aprendiz</th>
                        <th>Imagen QR</th>
                        <th>Competencias</th>
                        <th>Ficha</th>
                        <th>Programa de Formacion</th>

                    </tr>
                    @foreach (var aprendiz in ViewBag.Aprendiz)
                    {
        <tr>

            @*<td>@aprendiz.idAsistencia</td>*@
            <td>@aprendiz.Fecha_Asistencia</td>
            <td>@aprendiz.Hora_Asistencia</td>
            <td>Asistio</td>
            <td>@aprendiz.Nombres</td>
            <td>@aprendiz.Apellidos</td>
            <td>@aprendiz.ImagenQR</td>
            <td>@aprendiz.Competencias</td>
            <td>@aprendiz.Ficha</td>
            <td>@aprendiz.Programa</td>

        </tr>}
                </table>


            </div>

            <div id="botones">


                <div class="volver">
                    <button class="boton-transicion" onclick="redirectTo('MenuprincipalAprendiz')">Volver</button>
                </div>
            </div>
        </div>

    </section>
    <footer>
        Assist.NET
    </footer>

</body>
</html>
<script>
    function redirectTo(url) {
        // Agrega una clase de transición al cuerpo del documento
        document.body.classList.add('transicion-salida');

        // Espera un momento antes de redirigir
        setTimeout(function () {
            window.location.href = url;
        }, 500); // Ajusta el tiempo según tu preferencia
    }
</script>