
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consultarinasistencias</title>
    <link href="~/CSS/EstiloConsultarI.css" rel="stylesheet" />
    <link href="~/Content/CSSvistasInstructor.css" rel="stylesheet" />
    <link href="~/CSS/cssQRAsistencia.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Apendiz Brayan Marchena Urbina</h1>
            <h4>Consultar Inasistencias</h4>
        </div>

        <div class="cuadrado">
            <table>
                <tr>
                    <th>Id de Asistencias</th>
                    <th>Fecha de Asistencias</th>
                    <th>Hora de Asistencias</th>
                    <th>Tipo de Asistencias</th>
                    <th>Nombre de Aprendiz</th>
                    <th>Apellido de Aprendiz</th>
                    <th>Imagane de QR</th>
                    <th>Competencia</th>
                    <th>Ficha</th>
                    <th>Programa de Formación</th>

                </tr>
                @foreach (var aprendiz in ViewBag.Aprendiz)
                {
                    <tr>
                   
                        <td>@aprendiz.idAsistencia</td>
                        <td>@aprendiz.Fecha_Asistencia</td>
                        <td>@aprendiz.Hora_Asistencia</td>
                        <td>@aprendiz.Tipo_Asistencia</td>
                        <td>@aprendiz.Nombres</td>
                        <td>@aprendiz.Apellidos</td>
                        <td>@aprendiz.ImagenQR</td>
                        <td>@aprendiz.Competencias</td>
                        <td>@aprendiz.Ficha</td>
                        <td>@aprendiz.Programa</td>
                      
                    </tr>
                }


                <!-- Puedes añadir más filas según sea necesario -->
            </table>
        </div>
    </div>
    <div id="botones">
        <div class="">
            <button class="button" onclick="redirectTo('Archivosoporte')">Subir archivo de soporte</button>
        </div>
        
        <div class="volve">
            <button  class="boton-transicion button" onclick="redirectTo('Index')">Volver</button>
        </div>
    </div>

    @*<footer id="Bot"> Proyecto asistencia © </footer>*@
</body>
</html>
<script>
    function redirectTo(url) {
        // Agrega una clase de transición al cuerpo del documento
        document.body.classList.add('transicion-salida');

        // Espera un momento antes de redirigir
        setTimeout(function () {
            window.location.href = url;
        }, 500); // Ajusta el tiempo según tu preferencia
    }
</script>