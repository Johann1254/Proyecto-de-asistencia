@model Libreria_de_conexion.Ficha

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Botones_y_textos.css" rel="stylesheet" />
    <title>Detalles</title>
</head>
<body>
    <div>
        <h4>Ficha</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <a class="nombre">Jornada</a>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Jornada_Ficha)
            </dd>

            <dt>
                <a class="nombre">Fecha inicio</a>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fecha_inicio)
            </dd>

            <dt>
                <a class="nombre">Fecha fin</a>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fecha_fin)
            </dd>

            <dt>
                <a class="nombre">Tipo de ficha</a>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tipo_Ficha)
            </dd>

            <dt>
                <a class="nombre">Identificacion admin</a>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Administrador.idAdministrador)
            </dd>

            <dt>
                Programa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Programa_Formacion.Nombre_Programa)
            </dd>

        </dl>
    </div>
    <div class="form-group button-container">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn-Editar" value="Editar" onclick="location.href='@Url.Action("Edit", new { id = Model.Numero_Ficha })'" />
            <input type="button" class="input-volver" value="Volver" onclick="location.href='@Url.Action("Index")'" />

        </div>
    </div>
</body>
</html>
