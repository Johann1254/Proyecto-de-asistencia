@model Libreria_de_conexion.Ficha

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Botones_y_textos.css" rel="stylesheet" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Ficha</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
               <a class="nombre">Numero de ficha</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero_Ficha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Numero_Ficha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Jornada</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Jornada_Ficha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Jornada_Ficha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Fecha inicio</a>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Fecha_inicio, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.Fecha_inicio, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <a class="nombre">Fecha fin</a>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Fecha_fin, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.Fecha_fin, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <a class="nombre">Tipo de ficha</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tipo_Ficha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_Ficha, "", new { @class = "text-danger" })
            </div>
        </div>
    
            <div class="form-group">
                <a class="nombre">Programa</a>
                <div class="col-md-10">
                    @Html.DropDownList("idPrograma", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idPrograma, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <a class="nombre">Identificacion admin</a>                <div class="col-md-10">
                    @Html.DropDownList("idAdministrador", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idAdministrador, "", new { @class = "text-danger" })
                </div>
            </div>
    
             <br />
            <div class="form-group button-container">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn-guardar" />
                    <input type="button" class="input-volver" value="Volver" onclick="location.href='@Url.Action("Index")'" />
                </div>
            </div>
        </div>
    }
    
    
</body>
</html>
