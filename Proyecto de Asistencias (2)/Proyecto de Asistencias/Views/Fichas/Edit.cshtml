@model Libreria_de_conexion.Ficha

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link href="~/Content/Botones_y_textos.css" rel="stylesheet" />

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Numero_Ficha)

        <div class="form-group">
            <a class="nombre">Jornada</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Jornada_Ficha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Jornada_Ficha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Fecha inicio</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha_inicio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_inicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Fecha fin</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha_fin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_fin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Tipo de ficha</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tipo_Ficha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_Ficha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Identificacion admin</a>
            <div class="col-md-10">
                @Html.DropDownList("idAdministrador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idAdministrador, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group button-container">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn-guardar" />
                <input type="button" class="input-volver" value="Volver" onclick="location.href='@Url.Action("Index")'" />
            </div>
        </div>
    </div>
}


