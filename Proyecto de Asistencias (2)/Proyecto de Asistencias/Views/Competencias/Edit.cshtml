@model Libreria_de_conexion.Competencia

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idCompetencia)

        <div class="form-group">
            <a class="nombre">Nombre</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre_Competencia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Competencia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Tipo</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tipo_Competencias, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_Competencias, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Duracion</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Duracion_Competencia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Duracion_Competencia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Identificacion admin</a>
            <div class="col-md-10">
                @Html.DropDownList("idAdministrador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idAdministrador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a class="nombre">Id programa</a>
            <div class="col-md-10">
                @Html.DropDownList("idPrograma", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPrograma, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group button-container">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn-guardar" />
                <input type="button" class="input-volver" value="Volver" onclick="location.href='@Url.Action("Index")'" />
            </div>
        </div>
    </div>
}


