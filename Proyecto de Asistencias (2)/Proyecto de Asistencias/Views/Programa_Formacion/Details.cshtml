@model Libreria_de_conexion.Programa_Formacion

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>
<link href="~/Content/Botones_y_textos.css" rel="stylesheet" />
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <a class="nombre">Nombre</a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_Programa)
        </dd>

        <dt>
            <a class="nombre">Duracion</a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duracion_Programa)
        </dd>

        <dt>
            <a class="nombre">Identificacion admin</a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Administrador.idAdministrador)
        </dd>

        <dt>
            <a class="nombre">Numero de ficha</a>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ficha.Numero_Ficha)
        </dd>

    </dl>
</div>
<div class="col-md-offset-2 col-md-10">
    <input type="button" class="btn-Editar" value="Editar" onclick="location.href='@Url.Action("Edit", new { id = Model.idPrograma })'" />
    <input type="button" class="input-volver" value="Volver" onclick="location.href='@Url.Action("Index")'" />

</div>
