@model IEnumerable<Libreria_de_conexion.Aprendiz>

@{
    ViewBag.Title = "Aprendiz";
}
<br />
<h2 class="welcome">Aprendiz</h2>
<br/>    
<style>
    .welcome {
        text-align: center;
        padding: 10px;
        background-color: #3DAF04;
        border-radius: 15px;
        color: white;
        font-family: 'Poppins',sans-serif;
    }
</style>
<link href="~/Content/Estilo_tablas.css" rel="stylesheet" />
<link href="~/CSS/Botonesprincipales_tablas.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Nuevo Aprendiz", "Create","" , new { @class= "btn-nuevo" })
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
               Nombres
            </th>
            <th>
               Apellidos
            </th>
            <th>
               Email
            </th>
            <th>
               Tipo Documento
            </th>
            <th>
               Numero de documento
            </th>
            <th>
               Contraseña
            </th>
            <th>
              Estado
            </th>
            <th>
               Identificacion admin
            </th>

            <th>
               Ficha
            </th>
            <th>OPERACIONES</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres_Aprenidiz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos_Aprendiz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email_Aprenidiz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero_Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contraseña)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrador.idAdministrador)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ficha.Numero_Ficha)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idAprendiz }, new { @class = "btn-editar" }) 
                    @Html.ActionLink("Detalles", "Details", new { id = item.idAprendiz }, new { @class = "btn-detalles" }) 
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idAprendiz }, new { @class = "btn-eliminar" })
                </td>
            </tr>
        }

    </table>
</div>
