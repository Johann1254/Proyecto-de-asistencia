@model IEnumerable<Libreria_de_conexion.Aprendiz>

@{
    ViewBag.Title = "Aprendiz";
}

<h2>Aprendiz</h2>
<link href="~/Content/Estilo_tablas.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Nuevo Aprendiz", "Create","" , new { @class="btn btn-success"})
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres_Aprenidiz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos_Aprendiz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email_Aprenidiz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraseña)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrador.Nombre_Administrador)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ficha.Jornada_Ficha)
            </th>
            <th>OPERACIONES</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres_Aprenidiz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos_Aprendiz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email_Aprenidiz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero_Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contraseña)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrador.idAdministrador)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ficha.Numero_Ficha)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idAprendiz }, new { @class = "btn btn-secondary" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idAprendiz }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idAprendiz }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
