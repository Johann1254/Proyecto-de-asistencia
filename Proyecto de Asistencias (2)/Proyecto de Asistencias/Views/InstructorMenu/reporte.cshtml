
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de Reporte</title>
    <link href="~/CSS/CSSvistasInstructor.css" rel="stylesheet" />
   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header></header>
    <section>


        <div class="container">
            <div class="header">
                <h1>Instructor Jesus Marzal Barboza</h1>
                <h4>Reporte</h4>
            </div>
            <div class="form-container">

                <h1>Previsualización del Reporte</h1>
                <div class="form-group">
                    <label for="fecha">Fecha:</label>
                    <input type="date" id="fecha" name="fecha" required class="form-control" />
                </div>
                <button class="button" onclick="MostrarReporte()">Generar reporte</button>
                <div class="cuadrado">
                    <iframe id="frmReporte" width="100%" height="600px" frameborder="0" scrolling="no" style="display:none;"></iframe>

                </div>

            </div>
            <div class="footer">
                <button class="button" onclick="location.href = 'MenuprincipalInstructor'">Volver</button>
            </div>
        </div>
    </section>

    <script>
        function MostrarReporte() {
            var fecha = document.getElementById("fecha").value;
            if (!fecha) {
                alert("Por favor, seleccione una fecha.");
                return;
            }

            // Mostrar el reporte en el iframe
            $("#frmReporte")
                .attr("src", "/instructormenu/previsualizar?fecha=" + encodeURIComponent(fecha))
                .show();
        }
    </script>
    <footer>
        Assist.NET
    </footer>
</body>

</html>
